{% extends "base.html.twig" %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block body %}
<div class="container my-5">
    {{ form_start(form) }}
        <div class="container p-3 bg-light rounded-lg">
            <h3 class="mt-0 mb-3 text-dark">
                Inloggningsuppgifter
            </h3>

            <div class="form-group">
                {{ form_widget(form.userEmail, {"attr": {"placeholder": "E-postadress"}}) }}
            </div>

            <div class="row">
                <div class="col">
                    {{ form_widget(form.userPassword, {"attr": {"placeholder": "Lösenord"}}) }}
                </div>

                <div class="col">
                    {{ form_widget(form.userPasswordConfirm, {"attr": {"placeholder": "Bekräfta lösenord"}}) }}
                </div>
            </div>
        </div>

        <div class="container mt-2 p-3 bg-light rounded-lg">
            <h3 class="mt-0 mb-3 text-dark">
                Personuppgifter
            </h3>

            <div class="row">
                <div class="col">
                    {{ form_widget(form.userPersonFirstname, {"attr": {"placeholder": "Tilltalsnamn"}}) }}
                </div>

                <div class="col">
                    {{ form_widget(form.userPersonSurname, {"attr": {"placeholder": "Efternamn"}}) }}
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-end mt-1">
            {{ form_row(form.submit, {"label": "Registrera"}) }}
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}